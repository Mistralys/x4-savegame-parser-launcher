{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "x4-savegame-parser-launcher",
  "version": "0.1.0",
  "identifier": "com.newsl.x4-savegame-parser-launcher",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "X4 Savegame Parser & Launcher",
        "width": 1000,
        "height": 700,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
